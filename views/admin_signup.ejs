<body class="bg-white">
    <div class="row g-0 min-vh-100">
        <div class="col-lg-6 d-none d-lg-block">
            <div class="bg-cover h-lg-100" style="background-image: url('/images/product-images/home7-product6-1.jpg');"></div>
        </div>
        <div class="col-lg-6 d-flex align-items-center justify-content-center justify-content-lg-start">
            <div class="py-5 ps-lg-8">
                <a href="index.html">
                    <img src="assets/img/svg/logo.svg" alt="">
                </a>
                <h4 class="font-weight-normal text-dark mt-5">
                    Create your account
                </h4>
                <form class="w-300 w-lg-350 mt-4">
                    <div class="mb-3">
                        <input type="text" name="name" placeholder="Name"
                            class="form-control form-control-lg bg-pastel-darkblue">
                    </div>
                    <div class="mb-3">
                        <input type="email" name="email" placeholder="Email"
                            class="form-control form-control-lg bg-pastel-darkblue">
                    </div>

                    <div class="mb-3">
                        <input type="password" name="password" placeholder="Password"
                            class="form-control form-control-lg bg-pastel-darkblue">
                    </div>
                    <input type="submit" class="btn btn-primary btn-lg shadow-lg text-uppercase-bold-sm hover-lift mt-4"
                        value="Create account">

                    <div class="text-secondary font-size-sm mt-5">
                        Already have an account?
                        <a href="/admin_login">Sign in</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('admin_footer') -%>