<%- include('header') -%>
    <div id="page-content">
        <!--Page Title-->
        <div class="page section-header text-center">
            <div class="page-title">
                <div class="wrapper">
                    <h1 class="page-width">Recover your Password</h1>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 main-col offset-md-3">
                    <div class="mb-4">
                        <form method="post" action="/user_email_verifyPost" id="CustomerLoginForm" accept-charset="UTF-8"
                            class="contact-form">
                            <div class="row" id="inside">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <input type="email" name="email" placeholder="Email" id="userEmail" class=""
                                            autocorrect="off" autocapitalize="off" autofocus="" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
                                    <input type="submit" class="btn mb-3" value="Send OTP">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <%- include('footer') -%>
