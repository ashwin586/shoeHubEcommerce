<%-include('admin_header') -%> <%-include('admin_sidebar') -%>
<div class="main-content">
  <div class="container-fluid pb-7">
    <div class="row mt-5">
      <div class="col-xl-12">
        <div class="card h-100">
          <div class="card-header">
            <div class="card-header-title">User Managment</div>
          </div>

          <div class="table-responsive">
            <table class="table table-sm card-table table-nowrap">
              <thead>
                <tr>
                  <th>Sl No</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Phone No</th>
                  <th>Status</th>
                  <th>Action</th>
                  <th></th>
                </tr>
              </thead>
              <tbody class="list">
                <% users.forEach((user, index)=> { %>
                <tr>
                  <td><%= index+1%></td>
                  <td><%= user.firstName%></td>
                  <td><%= user.lastName%></td>
                  <td><%= user.email%></td>
                  <td><%= user.phoneNo%></td>
                  <td>
                    <% if(user.isBlocked==false) {%>
                    <span class="text-success">●</span>
                    Active <%} else {%>
                    <span class="text-danger">●</span>
                    Blocked <%}%>
                  </td>
                  <td>
                    <% if(user.isBlocked==false) {%>
                    <a href="/user_block/<%=user._id%>" class="btn btn-danger"> Block </a>
                    <%} else if(user.isBlocked==true) {%>
                    <a
                      href="/user_unblock/<%=user._id%>"
                      class="btn btn-success"
                    >
                      Unblock
                    </a>
                    <%}%>
                  </td>
                </tr>
                <%});%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%-include('admin_footer')-%>
</div>
